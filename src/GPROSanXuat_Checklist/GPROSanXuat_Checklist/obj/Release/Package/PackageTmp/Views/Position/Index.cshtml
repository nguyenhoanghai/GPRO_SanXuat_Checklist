
@{
    ViewBag.Title = "chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="position-type-jtable" class="table-center"></div>

<div class="modal   fade  " id="position-type-popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal"  cancel class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin loại chức vụ</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div class="form-group">
                        <input class="form-control" id="position-type-id" type="hidden" />
                        <label class="control-label">Mã loại chức vụ <span class="required-class">*</span></label>
                        <input class="form-control" id="position-type-code" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên loại chức vụ <span class="required-class">*</span></label>
                        <input class="form-control" id="position-type-name" type="text" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mô Tả</label><br />
                        <textarea id="position-type-note" class="form-control"></textarea>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button"  cancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button"  save class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<div class="modal   fade  " id="popup-position" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal"  cancel class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin chức vụ</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div class=" form-group">
                        <label class="control-label">Loại chức vụ <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select class="form-control" id="position-type-select"></select>
                            <i re-position-type class="fa fa-refresh clickable red"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="position-id" type="hidden" />
                        <label class="control-label">Số thứ tự <span class="required-class">*</span></label>
                        <input class="form-control" id="position-index" type="text" onkeypress="return isNumberKey(event)"   />
                    </div>
                    <div class="form-group"> 
                        <label class="control-label">Tên chức vụ <span class="required-class">*</span></label>
                        <input class="form-control" id="position-name" type="text"   />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mô Tả</label><br />
                        <textarea id="position-note" class="form-control"></textarea>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button"  cancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button"  save class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div> 

<script src="~/Scripts/IED/Position/position-index.js"></script>