
@{
    ViewBag.Title = "Lầu";
}

<div id="jtable-floor" class="table-center"></div>

<div class="modal   fade  " id="popup-floor" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">   ×  </button>
                <h4 class="modal-title">Thông Tin lầu</h4>
            </div>
            <div class="modal-body  ">
                <div class="container-fluid">
                    <input class="form-control" id="floor-id" type="hidden" />
                    <div class="form-group  ">
                        <label class="control-label">Phân xưởng   <span class="required-class">*</span></label>
                       
                        <div class="select-box">
                            <select class="form-control" id="floor-wk-id" ></select>
                            <i re-workshop class="fa fa-refresh clickable red"></i>
                            <a href="/phan-xuong" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên lầu <span class="required-class">*</span></label>
                        <input class="form-control" id="floor-name" required="required" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ghi chú </label>
                        <textarea class="form-control" id="floor-note" required="required"  ></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" floor-cancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" floor-save class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/IED/Floor/floor-index.js"></script>