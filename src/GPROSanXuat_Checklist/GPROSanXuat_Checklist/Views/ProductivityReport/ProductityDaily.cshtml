
@{
    ViewBag.Title = "Năng xuất hàng ngày";
}

<style>
    #table-report-daily td {
        text-align: center;
        font-weight: 400;
        color: black
    }

    #table-report-daily thead td,
    #table-report-daily tbody td:first-child,
    #table-report-daily tbody tr:last-child td {
        font-weight: 700;
        color: blue;
        background: #efefef;
        text-align: center;
    }
</style>

<div class="container-fluid">
    <fieldset>
        <legend>Lọc thông tin</legend>
        <div class="col-md-2 form-group ">
            <label class="control-label">Phân xưởng<span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-daily-workshop"></select>
                <i re_line class="fa fa-refresh clickable red"></i>
                <a href="/phan-xuong" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
            </div>
        </div>
        <div class="col-md-2 form-group ">
            <label class="control-label">Lầu <span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-daily-floor"></select>
                <i re_line class="fa fa-refresh clickable red"></i>
                <a href="/floor" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
            </div>
        </div>

        <div class="col-md-2 form-group ">
            <label class="control-label">Từ ngày <span class="required-class">*</span></label>
            <input class="form-control" id="report-daily-from" type="text" />
        </div>

        <div class="col-md-2 form-group ">
            <label class="control-label">đến <span class="required-class">*</span></label>
            <input class="form-control" id="report-daily-to" type="text" />
        </div>

        <div class="col-md-4 form-group ">
            <label class="control-label">Loại năng xuất <span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-daily-type">
                    <option value="1">Thoát chuyền / Định mức</option>
                    <option value="2">Kiểm đạt / Định mức</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 form-group ">
            <button type="button" id="btn-report-daily-view" class="btn btn-primary"><i class="fa fa-search-minus"></i> Tìm kiếm </button>
            <button type="button" id="btn-report-daily-excel" class="btn btn-danger"><i class="fa fa-file-excel-o"></i> Xuất Excel </button>

        </div>
    </fieldset>

    <fieldset>
        <legend>Thông tin năng xuất</legend>
        <table id="table-report-daily" class="table table-bordered table-hover  ">
            <thead class="thead-light"></thead>
            <tbody></tbody>
        </table>
    </fieldset>
</div>

<script src="~/Scripts/IED/productivity-report/report-productivity-daily.js"></script>