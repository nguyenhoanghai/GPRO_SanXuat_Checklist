
@{
    ViewBag.Title = "Theo dõi năng xuất hàng giờ";
}
<style>
    #table-report-inday td {
        text-align: center;
        font-weight: 400;
        color: black
    }

    #table-report-inday thead td,
    #table-report-inday tbody td:first-child,
    #table-report-inday tbody tr:last-child td {
        font-weight: 700;
        color: blue;
        background: #efefef;
        text-align: center;
    }
</style>
<div class="container-fluid">
    <fieldset>
        <legend>Lọc thông tin</legend>
        <div class="col-md-2 form-group ">
            <label class="control-label">Phân xưởng<span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-inday-workshop"></select>
                <i re_line class="fa fa-refresh clickable red"></i>
                <a href="/phan-xuong" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
            </div>
        </div>
        <div class="col-md-2 form-group ">
            <label class="control-label">Lầu <span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-inday-floor"></select>
                <i re_line class="fa fa-refresh clickable red"></i>
                <a href="/floor" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
            </div>
        </div>
        <div class="col-md-3 form-group ">
            <label class="control-label">Loại năng xuất <span class="required-class">*</span></label>
            <div class="select-box">
                <select class="form-control" id="report-inday-type">
                    <option value="1">Thoát chuyền / Định mức</option>
                    <option value="2">Kiểm đạt / Định mức</option>
                </select>
            </div>
        </div>
        <button type="button" id="btn-report-inday-view" class="btn btn-primary" style="margin-top:30px"><i class="fa fa-search-minus"></i> Tìm kiếm </button>
        <button type="button" id="btn-report-inday-excel" class="btn btn-danger" style="margin-top:30px"><i class="fa fa-file-excel-o"></i> Xuất Excel </button>
    </fieldset>

    <fieldset>
        <legend>Thông tin năng xuất</legend>
        <table id="table-report-inday" class="table table-bordered table-hover  ">
            <thead class="thead-light"></thead>
            <tbody></tbody>
        </table> 
    </fieldset>
</div>

<script src="~/Scripts/IED/productivity-report/report-productivity-in-day.js"></script>