@{
    ViewBag.Title = "Kỹ năng nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ek-jtable" class="table-center"></div>

<div class="modal   fade  " id="popup-ek" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog   ">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" cancel class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin kỹ năng nhân viên</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div box-tb class="form-group col-md-6">
                        <input class="form-control" id="ek-id" type="hidden" />
                        <label class="control-label">Nhân viên <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select class="form-control" id="ek-employee"></select>
                            <i re-employee class="fa fa-refresh clickable red"></i>
                            <a href="/nhan-vien" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
                        </div>
                    </div>
                    <div class=" form-group col-md-6">                       
                        <label class="control-label">Nhóm kỹ năng <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select class="form-control" id="ek-skill-group"></select>
                            <i re-skill-group class="fa fa-refresh clickable red"></i>
                            <a href="/skill/index" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
                        </div>
                    </div>

                    <div class=" form-group col-md-6">
                        <label class="control-label">Kỹ năng <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select class="form-control" id="ek-skill"></select>
                            <i re-skill class="fa fa-refresh clickable red"></i>
                            <a href="/skill/index" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
                        </div>
                    </div>
                    <div class=" form-group col-md-6">
                        <label class="control-label">Cấp độ kỹ năng <span class="required-class">*</span></label>
                        <div class="select-box">
                            <select class="form-control" id="ek-skill-level"></select>
                            <i re-skill-level class="fa fa-refresh clickable red"></i>
                            <a href="/skill/index" target="_blank"><i class="fa fa-plus-circle clickable blue"></i></a>
                        </div>
                    </div> 
                    <div class="clearfix"></div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" cancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" save class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/IED/employee-skill/employee-skill-index.js"></script>