
@{
    ViewBag.Title = "Phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="department-jtable" class="table-center"></div>

<div class="modal   fade  " id="department-popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" cancel class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin phòng ban</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div class="form-group">
                        <label class="control-label">Số thứ tự <span class="required-class">*</span></label>
                        <input class="form-control" id="department-index" type="text" onkeypress="return isNumberKey(event)" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="department-id" type="hidden" />
                        <label class="control-label">Mã phòng ban <span class="required-class">*</span></label>
                        <input class="form-control" id="department-code" type="text" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tên phòng ban <span class="required-class">*</span></label>
                        <input class="form-control" id="department-name" type="text" />
                    </div>                    
                    <div class="form-group">
                        <label class="control-label">Mô Tả</label><br />
                        <textarea id="department-note" class="form-control"></textarea>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" cancel class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" save class="btn btn-primary"><i class="fa fa-floppy-o"></i> Lưu lại </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/IED/Department/department-index.js"></script>
